{% extends "base.front.twig" %}
{% block body %}
    <!-- News Section -->
    <section class="news-section">
        <div class="auto-container">

            <div class="row">
                <!-- News Block -->
                {% for product in products %}
                    <div class="news-block col-lg-4 col-md-6 col-sm-12">
                        <div class="inner-box">
                            <div class="image-box">
                                <figure class="image">
                                    <a href="blog-detail.html">
                                        {% if product.Image is not null and product.Image.path is not null and product.Image.name is not null %}
                                             <img src="{{ product.Image.path ~ '/770x350_' ~ product.Image.name ~ '.webp' }}" alt="">
                                        {% endif %}
                                    </a>
                                </figure>
                            </div>
                            <div class="lower-content">
                                <div class="post-date"><span class="far fa-calendar"></span> Jan 01, 2020</div>
                                <ul class="post-info">
                                    <li><span class="far fa-user"></span>ادمین</li>
                                    <li><span class="far fa-calendar"></span><a href="blog-grid.html#">دسته بندی</a></li>
                                </ul>
                                <h4><a href="blog-detail.html">{{ product.title }}</a></h4>
                                <div class="btn-box"><a href="blog-grid.html#" class="read-more">Read More <span class="fa fa-arrow-right"></span></a></div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!--End News Section Two -->
{% endblock %}