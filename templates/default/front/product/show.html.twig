                                        <li><span class="far fa-user"></span> ادمین</li>
                                        <li><span class="far fa-list-alt"></span><a href="blog-grid.html#">{{ product.Category.title }}</a></li>
                                        <li><span class="far fa-calendar"></span>{{ product.cdate|localizeddatetr('custom', 'none', 'fa_IR@calendar=persian', 'Asia/Tehran', null) }}</li>
                                    </ul>
                                    {{ product.text|raw }}
                                </div>
                            </div>
                        </div>

                        <!-- Other Options -->
                        <div class="post-share-options clearfix">
                            <div class="pull-left">
                                <p>Tags : </p>
                                <ul class="tags">
                                    {% for barchasb in product.barchasbs %}
