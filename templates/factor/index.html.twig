{% extends 'base.html.twig' %}

{% block title %}Factor index{% endblock %}

{% block body %}
    <h1>Factor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cdate</th>
                <th>TrackingCode</th>
                <th>Amount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for factor in factors %}
            <tr>
                <td>{{ factor.id }}</td>
                <td>{{ factor.cdate ? factor.cdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ factor.trackingCode }}</td>
                <td>{{ factor.amount }}</td>
                <td>
                    <a href="{{ path('app_factor_show', {'id': factor.id}) }}">show</a>
                    <a href="{{ path('app_factor_edit', {'id': factor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_factor_new') }}">Create new</a>
{% endblock %}
