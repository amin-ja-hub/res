{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>FullName</th>
                <td>{{ comment.fullName }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ comment.text }}</td>
            </tr>
            <tr>
                <th>Cdate</th>
                <td>{{ comment.cdate ? comment.cdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ comment.published }}</td>
            </tr>
            <tr>
                <th>Udate</th>
                <td>{{ comment.udate ? comment.udate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ comment.type }}</td>
            </tr>
            <tr>
                <th>CountLike</th>
                <td>{{ comment.countLike }}</td>
            </tr>
            <tr>
                <th>Remove</th>
                <td>{{ comment.remove }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comment_index') }}">back to list</a>

    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
